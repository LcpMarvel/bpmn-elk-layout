{
  "name": "bpmn-elk-layout",
  "version": "1.0.0",
  "description": "Convert ELK-BPMN JSON to BPMN 2.0 XML with automatic layout",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "bpmn-elk-layout": "./dist/bin/bpmn-elk-layout.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "bun run build && bun run test"
  },
  "dependencies": {
    "bpmn-moddle": "^9.0.1",
    "commander": "^12.1.0",
    "elkjs": "^0.9.3",
    "web-worker": "1.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "playwright": "1.57.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "bpmn",
    "elk",
    "layout",
    "converter",
    "workflow",
    "process",
    "diagram"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  }
}
